<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.InputMenuController">
   <children>
      <VBox layoutX="-3.0" prefHeight="400.0" prefWidth="193.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label prefHeight="21.0" prefWidth="138.0" text="Type of graph" />
            <RadioButton fx:id="directedBox" mnemonicParsing="false" text="Directed">
               <toggleGroup>
                  <ToggleGroup fx:id="GraphType" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="undirectedBox" mnemonicParsing="false" selected="true" text="Undirected" toggleGroup="$GraphType" />
            <Label text="Algorithm" />
            <ComboBox fx:id="AlgorithmBox" prefWidth="150.0" />
            <Label text="Graph data (Optional)" />
            <TextArea fx:id="graphData" prefHeight="239.0" prefWidth="194.0" promptText="(First line has 2 number N,M - number of vertices and number of edges; the next M lines each have a combination u, v, w: begin - end - weight)" />
            <HBox prefHeight="55.0" prefWidth="193.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#validate" text="Draw Graph" textAlignment="CENTER" />
                  <Button fx:id="selectFileButoon" mnemonicParsing="false" onAction="#chooseFile" text="Select Input File">
                     <HBox.margin>
                        <Insets left="12.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
      <Label fx:id="filePathLabel" layoutX="198.0" layoutY="350.0" maxWidth="240.0" prefWidth="240.0" text="// FILE PATH DISPLAYED HERE">
         <font>
            <Font name="System Bold Italic" size="12.0" />
         </font>
         <padding>
            <Insets left="4.0" />
         </padding>
      </Label>
   </children>
</AnchorPane>
