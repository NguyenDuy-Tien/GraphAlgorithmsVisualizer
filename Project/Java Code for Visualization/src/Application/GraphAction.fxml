<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Application.GraphController">
   <children>
      <RadioButton fx:id="addNodeButton" layoutX="22.0" layoutY="60.0" mnemonicParsing="false" onAction="#AddNodeHandle" selected="true" text="Add node">
         <toggleGroup>
            <ToggleGroup fx:id="addType" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="addEdgeButton" layoutX="144.0" layoutY="60.0" mnemonicParsing="false" onAction="#AddEdgeHandle" text="Add edge" toggleGroup="$addType" />
      <AnchorPane fx:id="anchorRoot" layoutX="90.0" layoutY="111.0" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Group fx:id="canvasGroup" onMouseClicked="#handle" onMouseDragged="#handle" onMousePressed="#handle" onMouseReleased="#handle">
               <children>
                  <Pane fx:id="viewer" onMouseClicked="#handle" onMouseDragged="#handle" onMousePressed="#handle" onMouseReleased="#handle" prefHeight="400.0" prefWidth="580.0" />
               </children>
            </Group>
         </children></AnchorPane>
      <TextField fx:id="textAlgorithm" layoutX="245.0" layoutY="14.0" promptText="Algorithm name here">
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <Button fx:id="backButton" layoutX="14.0" layoutY="20.0" mnemonicParsing="false" text="Back" />
      <Button fx:id="resetButton" layoutX="14.0" layoutY="123.0" mnemonicParsing="false" onAction="#ResetHandle" text="Reset" />
      <Button fx:id="clearButton" layoutX="14.0" layoutY="165.0" mnemonicParsing="false" onAction="#ClearHandle" text="Clear" />
      <Button fx:id="pauseButton" layoutX="14.0" layoutY="209.0" mnemonicParsing="false" text="Pause" />
   </children>
</AnchorPane>
